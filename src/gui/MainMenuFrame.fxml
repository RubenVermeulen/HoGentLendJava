<fx:root prefHeight="768.0" prefWidth="1280.0" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <MenuBar prefHeight="22.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#menuActionUitloggen" text="Uitloggen" />
              <MenuItem mnemonicParsing="false" onAction="#menuActionAfsluiten" text="Afsluiten" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TabPane prefHeight="223.0" prefWidth="237.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Materiaal Beheer">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="669.0" prefWidth="1257.0">
                     <children>
                        <VBox layoutX="1020.0" layoutY="18.0" prefHeight="379.0" prefWidth="250.0">
                           <children>
                              <Label fx:id="lblWelkomInfo" prefHeight="52.0" prefWidth="230.0" text="Welkom !" wrapText="true" />
                              <Label fx:id="lblEmailInfo" prefHeight="51.0" prefWidth="230.0" text="Email: " wrapText="true" />
