                              <TextField fx:id="txfZoekMateriaalFilter" promptText="materiaal zoeken...">
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </TextField>
                              <Button mnemonicParsing="false" onAction="#onBtnZoekMateriaalAction" prefHeight="26.0" prefWidth="250.0" text="Zoek materiaal">
                                 <VBox.margin>
                                    <Insets top="10.0" />
                                 </VBox.margin>
                              </Button>
                           </children>
                        </VBox>
                        <ScrollPane layoutX="14.0" layoutY="14.0" prefHeight="689.0" prefWidth="990.0">
                           <content>
                              <VBox fx:id="materialenBox" prefHeight="687.0" prefWidth="988.0" />
                           </content></ScrollPane>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Reservatie Beheer">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
            <Tab text="Beheerder Beheer">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox layoutX="41.0" layoutY="37.0" prefHeight="646.0" prefWidth="1171.0">
                           <children>
                              <HBox alignment="TOP_CENTER" spacing="10.0">
                                 <children>
                                    <TextField fx:id="txfZoekLectoren" prefHeight="25.0" prefWidth="338.0" promptText="zoeken..." />
                                    <Button mnemonicParsing="false" onAction="#onActionBtnZoekLectoren" prefHeight="25.0" prefWidth="120.0" text="Zoek" />
                                 </children>
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </HBox>
                              <HBox>
                                 <children>
                                    <TableView prefHeight="269.0" prefWidth="1171.0">
                                      <columns>
                                        <TableColumn prefWidth="186.0" text="Naam" />
                                        <TableColumn prefWidth="288.0" text="Voornaam" />
                                          <TableColumn prefWidth="491.0" text="Email" />
                                          <TableColumn prefWidth="205.0" text="Is beheerder?" />
                                      </columns>
                                    </TableView>
                                 </children>
                              </HBox>
                              <HBox alignment="TOP_CENTER" spacing="10.0">
                                 <children>
                                    <Button mnemonicParsing="false" onAction="#onActionBtnStelAanAlsBeheerder" prefHeight="25.0" prefWidth="210.0" text="Stel aan als beheerder" />
                                    <Button mnemonicParsing="false" onAction="#onActionBtnVerwijderBeheerder" prefHeight="25.0" prefWidth="220.0" text="Verwijder beheerder" />
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
